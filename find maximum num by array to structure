#include <stdio.h>
int maxi(int[],int);
int main()
{
    int i,arr[50],n,max;
    printf("Enter number of values: ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("Enter the %d value: ",i+1);
        scanf("%d",&arr[i]);
    }
    max=maxi(arr,n);
    printf("The highest number in your given number : %d",max);
    return 0;
}

int maxi(int arr[],int n)
{
    int i,x,max;
    max=arr[0];
    for(i=0;i<n;i++)
    {
        if(arr[i]>max)
        {
            x=arr[i];
        }
    }
    return x;
}
